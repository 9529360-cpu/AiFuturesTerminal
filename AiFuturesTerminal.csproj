<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <DefineConstants>TRACE;DEBUG;BINANCE</DefineConstants>

    <!-- Single-file publishing settings for packaging into one exe -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.0" />
    <PackageReference Include="Binance.Net" Version="11.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\History\" />
  </ItemGroup>

  <ItemGroup>
    <None Include=".github\upgrades\Plan.md" />
  </ItemGroup>

</Project>
